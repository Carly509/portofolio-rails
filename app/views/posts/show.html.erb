<%= image_tag @post.image.url, class: 'img-circle' %>
<div class ='row'>
<h2><%= @post.title %></h2>
</div>
<%= @post.user.username %>
<%= @post.description %>
<div class ='row'>
<%= link_to 'Back', root_path %>
<td>
  <%= link_to edit_post_path(@post), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
</td>
<td>
  <%= link_to post_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-remove"></span>
    Delete
  <% end %>
</td>

<%= link_to like_post_path(@post), method: :put, class: 'btn btn-default' do%>
<span class="glyphicon glyphicon-heart"></span>
like
<%= @post.get_upvotes.size %>
<% end %>
</div>
