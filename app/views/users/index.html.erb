<% @page_title = "All  Users" %>

<%= link_to("<< Back to Menu", user_path, :class => 'back-link') %>

<div class="admin-users index">
  <h2>Users</h2>

  <%= link_to('Add New User', new_user_path, :class => 'action new') %>

  <div><%= pluralize(@users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin users list">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to('Edit', edit_user_path(user), :class => 'action edit') %>
        <%= link_to('Delete', delete_user_path(user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
